<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.TermDetails">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label x:Name="navigationTitle" Style="{StaticResource navigationTitle}"></Label>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout>
        <Label x:Name="termDates" Style="{StaticResource termDates}"></Label>
        <Entry x:Name="termEntry" VerticalOptions="CenterAndExpand"/>
        <Button Text="Add Course" x:Name="addCourseButton" Clicked="addCourseButton_Clicked" />
        <Button Text="Update Term" x:Name="updateButton" Clicked="updateButton_Clicked" />
        <Button Text="Delete Term" x:Name="deleteButton" Clicked="deleteButton_Clicked" />
    </StackLayout>
    
</ContentPage>