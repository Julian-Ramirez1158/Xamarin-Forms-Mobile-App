<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.AssessmentsPage">
    
    <NavigationPage.TitleView>
        <StackLayout>
            <Label x:Name="navigationTitle" Style="{StaticResource navigationTitle}" FontSize="Subtitle"></Label>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="backButton" Text="Back" Clicked="backButton_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <ListView x:Name="listView"
                        ItemSelected="listView_ItemSelected" Style="{StaticResource listItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding AssessmentTitle}" TextColor="DarkBlue"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Assessment" x:Name="AddAssessmentButton" VerticalOptions="EndAndExpand" Clicked="AddAssessmentButton_Clicked" BackgroundColor="#5dbea3"/>
    </StackLayout>
    

</ContentPage>