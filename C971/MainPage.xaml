<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.MainPage">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Student Success Portal" Style="{StaticResource navigationTitle}" Margin="0, 10, 0, 10"></Label>
        </StackLayout>
    </NavigationPage.TitleView>
    
    <StackLayout Margin="30" VerticalOptions="Center">
        <Image Source="SheltieIcon.png" HeightRequest="100" Margin="0, 0, 0, 0"/>
        <Label x:Name="greetingLabel" Text="Hello, QU student!" Margin="0, 30" FontSize="Title"/>
        <Entry x:Name="usernameEntry" Placeholder="Username"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="loginButton" Text="Login" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
