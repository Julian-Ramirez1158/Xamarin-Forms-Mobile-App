<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.MainPage">


    
    <StackLayout Margin="30" VerticalOptions="Center">

        <Label x:Name="greetingLabel" Text="Hello, WGU student!" Margin="0, 30" FontSize="Title"/>
        <Entry x:Name="usernameEntry" Placeholder="Username"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="loginButton" Text="Login" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
