<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.UpdateTermPage">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label x:Name="navigationTitle" Style="{StaticResource add_editNavigationTitle}" Text="Update Term"></Label>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="cancelButton" Text="Cancel" Clicked="cancelButton_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Update Term Page!"
                HorizontalOptions="Center" />
            <Entry x:Name="termTitle" Placeholder="Add Term Title" FontSize="Small"></Entry>
            <Label Text="Term Start Date" FontSize="Small"></Label>
            <DatePicker x:Name="startDateEntered" FontSize="Small"></DatePicker>
            <Label Text="Term End Date" FontSize="Small"></Label>
            <DatePicker x:Name="endDateEntered" FontSize="Small"></DatePicker>
            <Button Text="Save Updated Term" VerticalOptions="EndAndExpand" Clicked="Button_Clicked" BackgroundColor="#42c90c"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>