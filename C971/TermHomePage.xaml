<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.TermHomePage">


    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Terms" Style="{StaticResource navigationTitle}"></Label>
        </StackLayout>
    </NavigationPage.TitleView>
    
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Term" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <ScrollView>
            <StackLayout>
                <ListView x:Name="listView"
                          ItemSelected="listView_ItemSelected" Style="{StaticResource listItem}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Title}" TextColor="DarkBlue"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
        <Button  Text="Student Reports" x:Name="studentReportsButton" Clicked="studentReportsButton_Clicked"/>
    </StackLayout>
    
</ContentPage>