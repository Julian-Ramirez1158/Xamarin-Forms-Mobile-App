<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.AddTermPage">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label x:Name="navigationTitle" Style="{StaticResource add_editNavigationTitle}" Text="Add Term"></Label>
        </StackLayout>
    </NavigationPage.TitleView>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="cancelButton" Text="Cancel" Clicked="cancelButton_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Add Term Page!"
                HorizontalOptions="Center" />
            <Entry x:Name="termTitle" Placeholder="Add Term Title"></Entry>
            <Label Text="Term Start Date"></Label>
            <DatePicker x:Name="startDateEntered"></DatePicker>
            <Label Text="Term End Date"></Label>
            <DatePicker x:Name="endDateEntered"></DatePicker>
            <Button Text="Save Term" VerticalOptions="EndAndExpand" Clicked="ToolbarItem_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>